<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <style>
        #tri
        {
            background-color:whitesmoke;
        }
    </style>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    
    <script src="/public/ajaxtest2.js"></script>

</head>
<body>
    <%- include('nav.ejs')%>
    <div class="container">
        <form name="frm" action="/studlist" method="post">
            <label for="course" style=" font-size: 1em; color: white; display: inline-block; margin-bottom: 8px; margin-top: 38px; margin-left: 150px; ">Course:</label>
            <div class="d-flex flex-column align-items-center" style="margin-top: 20px;">
            <select name="name" id="course" class="form-control" style="height: 40px; width: 800px; margin-bottom: 20px; ">
              <% data1.forEach((item, index) => { %>
                <option value="<%= item.name %>"><%= item.name %></option>
              <% }); %>
            </select>
            </div>
       <div class="form-group d-flex justify-content-center" style="margin-top: 20px;">
       <!-- <input type="submit"  class="form-control"  id="ns" value="View Student" style="height: 40px; width: 500px;">     -->
        <div class="form-group d-flex justify-content-center" style="margin-top: 20px;">
    <input type="submit" class="btn btn-primary" id="ns" value="View Student" style="height: 40px; width: 200px; border-radius: 5px; font-size: 16px; text-align: center; ">
</div>

       </div>

        
    </form>

       
    <table class="table table-bordered text-center" style="background-color: white;">
        <thead>
            <tr>
                <th>SRNO</th>
                <th>NAME</th>
                <th>EMAIL</th>
                <th>CONTACT</th>
             
              
            </tr>
            </thead>
            <tbody id="tableBody">
               
                <%
                if(data.length==0){
                    %>
                    <tr id="tri"><td colspan="7"><h3>There is no data in database</h3></td> </tr>
                    <%
                }
                else
                {
                data.forEach((item,index)=>{
                %>

                <tr>
                    <td><%=(index+1)%></td>
                    <td><%=item.name%></td>
                    <td><%=item.email%></td>
                    <td><%=item.contact%></td>
                    
                  

                <%
                })
            }
                %>

            </tbody>
            </table>
        </div>
</body>
</html>